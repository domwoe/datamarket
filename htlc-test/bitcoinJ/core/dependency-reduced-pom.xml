            <version>1.3</version>
            <executions>
              <execution>
                <id>compile-protoc</id>
                <phase>generate-sources</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <tasks>
                    <path>
                      <fileset>
                        <include />
                      </fileset>
                    </path>
                    <pathconvert />
                    <exec>
                      <arg />
                      <arg />
                      <arg />
                    </exec>
                  </tasks>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
